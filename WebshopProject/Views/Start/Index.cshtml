@model WebshopProject.Models.ModelClass

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>
@* This page index.cshtml will be our main page, on here we will load product views, angular-ajax forms etc *@

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Webshop</title>

    @* CSS files *@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    @* Our custom CSS goes in this file *@
    <link rel="stylesheet" href="~/Content/CustomStyleSheet.css" />

</head>
<body ng-app="appRoute">

    @* Bootstrap container for page fluidity *@
    <div class="container">

            <div id="main">

                <a href="#/">Main page<span> </span></a>
                <a href="#/second">Second page</a>

            </div>

            @* PRODUCT PAGES routed through AngularJS will appear in this div *@
            <div ng-view style="background-color:brown"></div>


    </div>



    @* Script files *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/validate.js/0.11.1/validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular-route.js"></script>
    <script src="~/Scripts/AngularRouting.js"></script>
    @* Our custom Javascript goes in this file *@
    <script src="~/Scripts/CustomJavaScript.js"></script>
</body>
</html>

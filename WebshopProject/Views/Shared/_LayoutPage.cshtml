<reference path="~/Scripts/bootstrap.min.js"></reference>
@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/validate.js/0.11.1/validate.min.js"></script>*@
    <script src="~/Scripts/validate.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>*@
    <script src="~/Scripts/angular.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.js"></script>*@
    <script src="~/Scripts/angular-route.js"></script>

    @* Our custom Javascript goes in these files *@
    <script src="~/AngularRouting.js"></script>
    <script src="~/CustomJavaScript.js"></script>
    @* CSS files *@
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    @* Our custom CSS goes in this file *@
    <link rel="stylesheet" type="text/css" href="~/Content/CustomStyleSheet.css" />
</head>
<body class="container-fluid"
      style="background-color: #0E0B16;
      background-image: url('http://i64.tinypic.com/14xdt3q.jpg');
      background-clip:content-box;
      background-position:100%;
      color: white">
    <content>
        @* Shop Header with two rows *@
        <header>
            <div class="row">
                <div class="container-fluid">
                    <nav class="navbar navbar-inverse">

                        <div class="navbar-header">

                            <div class="col-md-3">
                                <img class="log-size" src="~/Content/Images/AngLogo.png" />
                            </div>

                            <div class="col-md-4 col-md-offset-1">
                                <p style="color:#F0A830"><i><b>Movies so sharp you wouldn't let your kids run with them</b></i></p>
                            </div>

                            <div class="col-md-4">
                                <form action="@Url.Action("Search", "Home")" method="get">
                                    <div class="form-group">
                                        <input type="search" placeholder="Movies" name="search" id="search">
                                        <button type="button" class="btn btn-success btn-sm" name="searchBtn" id="searchBtn">Search</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </nav>
                </div>
            </div>
        </header>

        <div class="row">
            
            <div class="container col-md-12">
                @* index.cshtml loads here *@
                @RenderBody()
            </div>

        </div>
    </content>
    @* This is the Footer of the shop *@
    <footer class="navbar-fixed-bottom text-center" style="background-color: black; color:white">
        <p>Angular Movies © 2017 | PFinnfors WassimElBittar maher2u</p>
    </footer>

    @Scripts.Render("~/Scripts/ThirdParty")
</body>
</html>
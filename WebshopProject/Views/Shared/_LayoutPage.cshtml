<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
</head>
<body class="container-fluid"
      style="background-color: #0E0B16;
      background-image: url('http://i64.tinypic.com/539t03.jpg');
      background-clip:content-box;
      background-position:center;
      color: white">

    <content>

        @* Shop Header with two rows *@
        <header style="border-bottom:1px ridge #4717F6">
            <div class="row">

                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/Index">Angular Movies</a>
                        </div>
                        <ul class="nav navbar-nav">
                            <li class="active dropdown">

                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Search
                                    <span class="caret"></span>
                                </a>

                                <ul class="dropdown-menu">
                                    <li style="color:black">
                                        <form action="@Url.Action("Search", "Home")" method="get">
                                            <input type="search" placeholder="product">
                                            <input type="submit" name="search" value="Search" />
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p style="color:black"><i><b>Movies so sharp you wouldn't let your kids run with them!</b></i></p>
                </div>
            </div>
        </header>

        <div class="row">
            @* index.cshtml loads here *@
            @RenderBody()
        </div>

    </content>

    @* This is the Footer of the shop *@
    <footer class="navbar-fixed-bottom text-center" style="background-color: black; color:white">
        <p>Angular Movies © 2017 | PFinnfors WassimElBittar maher2u</p>
    </footer>
</body>
</html>

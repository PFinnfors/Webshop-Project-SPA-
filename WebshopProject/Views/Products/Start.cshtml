<reference path="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></reference>

@model IEnumerable<WebshopProject.Models.Movie>

<div class="container productPages">

    @* Carousel *@
    <div class="row">
        <div class="col-md-7 container">
            <br>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- #region Carousel wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <a href="#/top-2017">
                            <img src="http://i66.tinypic.com/2je4gp1.jpg" alt="Top movies 2017">
                        </a>
                    </div>
                    <div class="item">
                        <img src="http://i63.tinypic.com/vrdl4x.jpg" alt="movie2">
                    </div>
                    <div class="item">
                        <img src="http://i65.tinypic.com/rba98l.jpg" alt="LOTR">
                    </div>
                    <div class="item">
                        <img src="http://i65.tinypic.com/1y3c6r.jpg" alt="Justice League">
                    </div>
                </div>
                <!-- #endregion Carousel wrapper for slides -->
                <!-- #region Carousel indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
                <!-- #endregion Carousel indicators -->
                <!-- #region Carousel controls -->
                <a class="left carousel-control" data-target="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" data-target="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!-- #endregion -->

            </div>
        </div>
    </div>
</div>